{
  "manifest_version": 3,
  "name": "Freshdesk History Cleaner",
  "version": "1.0",
  "description": "Hides history repeats in Freshdesk responses for cleaner reading.",
  "host_permissions": ["*://*.freshdesk.com/*"],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.freshdesk.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{cfe32480-bdff-499b-b09e-29c9102083a3}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
